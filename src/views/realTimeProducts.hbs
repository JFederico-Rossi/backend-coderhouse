<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/realTimeProducts.css" />
    <title>Real Time Products</title>
  </head>
  <body>
    <div>
      <h1>Ground Footwear Real Time Products</h1>

       <form id="add-product">
        <input type="text" id="title" placeholder="Title" required />
        <input type="text" id="description" placeholder="Description" required />
        <input type="number" id="price" placeholder="Price" required />
        <input type="text" id="code" placeholder="Code" required />
        <input type="number" id="stock" placeholder="Stock" required />
        <button type="submit" class="add">Add Product</button>
      </form>

      <ul id="list-products"></ul>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="js/mainClient.js"></script>
  </body>
</html>